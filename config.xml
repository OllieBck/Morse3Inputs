<?xml version='1.0' encoding='utf-8'?>
<widget id="info.jasonbeck" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Morse2Go</name>
    <description>
        Morse Code application built from Mor.js and ResponsiveVoice JS v1.5.1.  Inspired by work Jim Wroten at http://morse2go.org/.
    </description>
    <author email="jason@adapativedesign.org" href="http://www.adaptivedesign.org">
        Adaptive Design Associaiton
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="Fullscreen" value="true" />
    <preference name="BackgroundColor" value="0xff0000ff" />
    <preference name="Orientation" value="landscape" />
    <preference name="KeyboardDisplayRequiresUserAction" value="false" />
    <platform name="ios">
        <icon height="180" src="res/ios/icon.png" width="180" />
        <icon height="60" src="res/ios/icon.png" width="60" />
        <icon height="120" src="res/ios/icon.png" width="120" />
        <icon height="76" src="res/ios/icon.png" width="76" />
        <icon height="152" src="res/ios/icon.png" width="152" />
        <icon height="40" src="res/ios/icon.png" width="40" />
        <icon height="80" src="res/ios/icon.png" width="80" />
        <icon height="57" src="res/ios/icon.png" width="57" />
        <icon height="114" src="res/ios/icon.png" width="114" />
        <icon height="72" src="res/ios/icon.png" width="72" />
        <icon height="144" src="res/ios/icon.png" width="144" />
        <icon height="29" src="res/ios/icon.png" width="29" />
        <icon height="58" src="res/ios/icon.png" width="58" />
        <icon height="50" src="res/ios/icon.png" width="50" />
        <icon height="100" src="res/ios/icon.png" width="100" />
        <icon height="167" src="res/ios/icon.png" width="167" />
    </platform>
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="android" spec="^6.2.3" />
    <engine name="ios" spec="~4.3.1" />
    <plugin name="cordova-plugin-media" spec="3.0.1" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
</widget>
